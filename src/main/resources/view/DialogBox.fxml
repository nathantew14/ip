<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<!-- setting prefWidth here can change the width of everything else, but i can't seem to make it grow on its own -->
<!-- I give up it's literally impossible -->
<fx:root alignment="TOP_RIGHT"
    maxWidth="-Infinity"
    prefWidth="700.0"
    HBox.hgrow="ALWAYS"
    AnchorPane.rightAnchor="0.0"
    type="javafx.scene.layout.HBox"
    xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="dialog" text="Label" wrapText="true" minHeight="-Infinity" />
        <ImageView fx:id="displayPicture" fitHeight="99.0" fitWidth="99.0" pickOnBounds="true"
            preserveRatio="true" />
    </children>
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
    </padding>
</fx:root>